<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  	<display-name>Archetype Created Web Application For RESTful</display-name>
  
  	<servlet>
	  	<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>
	  		com.sun.jersey.spi.container.servlet.ServletContainer
		</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.feature.Redirect</param-name>
            <param-value>true</param-value>
        </init-param>
		<!-- 
        <init-param>
            <param-name>com.sun.jersey.config.feature.ImplicitViewables</param-name>
            <param-value>true</param-value>
        </init-param>		
		 -->
		
	  	<init-param>
	    	<param-name>com.sun.jersey.config.property.packages</param-name>
	    	<param-value>com.sample.hello.resources;com.io.resources</param-value>
	    	<!-- 
	    	<param-value>com.sample.hello.resources;com.sample.hello2.resources</param-value>
	    	 -->
	  	</init-param>
	  	<!--  以应用类的型式，来初始化资源
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			 <param-value>org.foo.rest.MyApplication</param-value>
		</init-param>
	  	 -->
	  	<load-on-startup>1</load-on-startup>
	</servlet>
	
	
	
	<servlet-mapping>
	  	<servlet-name>Jersey REST Service</servlet-name>
	  	<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<!-- 
	<servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
	 -->
	 
	<!-- 404 error page -->
	<error-page> 
	  <error-code>404</error-code>
	  <location>/pages/utils/404.html</location>
	</error-page>
		
	<welcome-file-list>
	  <welcome-file>index.html</welcome-file>
	  <welcome-file>index.jsp</welcome-file>
	  <welcome-file>default.jsp</welcome-file>
	  <welcome-file>default.html</welcome-file>
	</welcome-file-list>	
</web-app>
